<div id="comment-segment">
    <div id="comment">
        <img src="/images/profile-imgs/{{profile_pic}}" id="Comment-Picture">
        <div id="comment-text">
            <a href="u/{{username}}"><span id="commentor-name">{{username}}</span></a><br>
            {{text}}
        </div>
    </div>

    {{#each replies}}
    {{>reply this}}
    {{/each}}
</div>